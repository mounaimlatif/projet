[short-preview]

<!-- Article $id -->
<div class="article post">
<div class="cat_name nsblog">Posting in: {link-category}</div>

	<dl class="meta">
	<dt class="author" title="Auteur">Auteur</dt> <dd>{author}</dd>
	<dt class="comments" title="Commentaires">Commentaires</dt> <dd>[com-link]Commentaires ({comments-num})[/com-link]</dd>
	<dt class="views" title="Vus">Vus</dt> <dd>Vus: {views}</dd>
	<dt class="date" title="Date">Date</dt> <dd>[day-news]{date}[/day-news]</dd>
[tags]<dt class="tags" title="Mots-cl&eacute;s">Mots-cl&eacute;s</dt><dd style="line-height: 100% !important; padding-top: 5px;">{tags}</dd>[/tags]
    
    		
	</dl>
							
<!-- Article info - start -->
<div class="intro">
	<h2 class="title"><img src="{THEME}/images/postinfo-icon.png" alt="" class="img" />[full-link]{title}[/full-link]</h2>			
	
<div class="hr_line"></div>
    
<div class="contenttext">
{short-story}
</div>

[edit-date]
<div class="spacer"></div>
<div class="tag_title"><i>Edit&eacute; par : <span style="color:red"><strong>{editor}</strong></span> - {edit-date}</i></div>[edit-reason]<div class="tag"><span style="color:red">Raisons:</span> {edit-reason}</div>[/edit-reason]
[/edit-date]

   
<div class="hr_line"></div>
{rating}
<div style="text-align: right;">
<span class="buttons">[edit]<span>Editer</span>[/edit]</span>
<span class="buttons">[com-link]<span>Commentaires ({comments-num})</span>[/com-link]</span>
<span class="buttons">[full-link]<span>Lire la suite...!</span>[/full-link]</span>
</div>



<div class="clear"></div>

</div>
<!-- Article info - End -->

</div>
<!-- Article $id -->


<div class="separator"></div>
<div class="clear"></div>


[/short-preview]





