[searchposts]

[fullresult]
<div class="shortmovies">
<div class="shortinner">
<div class="clear"></div>

<div class="leftpane">
	<div class="movieposter" title="Regarder {result-title}">
[result-link]<img src="[xfvalue_poster]" width="110" height="150" alt="Regarder {result-title}" title="Regarder {result-title}" />[/result-link]

	<div class="shortname">{result-title}</div>
	[xfgiven_quality]<div class="[xfvalue_quality]">[xfvalue_quality]</div>[/xfgiven_quality]
	</div>
</div>

<div class="rightpane">
	<div style="display:block;overflow:hidden;">
    <div style="position:absolute; top: 5px; right:5px; background:#ccc;border: 1px solid #999;-moz-border-radius: 3px;-khtml-border-radius: 3px;-webkit-border-radius: 3px;border-radius: 3px;padding: 1px 4px;width:auto;overflow:hidden;">#{search-id}</div>
    <h2 class="title" title="{result-title}">[result-link]{result-title}[/result-link]</h2>

	<div style="height:105px; overflow:hidden;">
		<div class="small">
			<div class="cats" title="Genre - Cat&eacute;gorie">{link-category}</div>
			[xfgiven_year]<div class="year" title="Ann&eacute;e de production">[xfvalue_year]</div>[/xfgiven_year]
			[xfgiven_country]<div class="country" title="Pays">[xfvalue_country]</div>[/xfgiven_country]
            [xfgiven_actors]<div class="actor" title="Acteurs/Actrices">[xfvalue_actors]</div>[/xfgiven_actors]
			[xfgiven_imdb]<div class="imdb" title="{result-title} Site Officiel Allocin&eacute;"><a href="[xfvalue_imdb]" target="_blank" title="{result-title} Site Officiel Allocin&eacute;">{result-title} sur Allocin&eacute;</a></div>[/xfgiven_imdb]
		</div>
	</div>
<div class="clear" style="height:2px;"></div>
<div style="float:right">
[result-link]<span class="shortlinksfull">Film Complet...</span>[/result-link]
</div>
<div class="clear"></div>

        
	</div>
</div>

<div class="clear"></div>
</div>
</div>
[/fullresult]

[shortresult]
<div class="article" style="margin-right:15px">
<div class="searchheader">
<img src="{THEME}/images/ico/search.png" alt="" class="img" />#{search-id} &raquo; [result-link]{result-title}[/result-link]
</div>

<div class="contenttext">

<ul>
<li>Cat&eacute;gorie: {link-category}</li>
<li>Post&eacute; par: {result-author}</li>
<li>Post&eacute; le: ({result-date})</li>
<li>Regard&eacute;: {views}</li>
<li>Commentaires: ({result-comments})</li>
<li><span class="buttons">[result-link]<span>Voir ce film...!</span>[/result-link]</span></li>
</ul>

</div>

</div>
<div class="separator"></div>
<div class="clear"></div>
[/shortresult]

[/searchposts]





