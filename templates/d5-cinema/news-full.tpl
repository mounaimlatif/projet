<div class="story story-full page">
	<div class="title">
		<h1>{title}</h1>
	</div>
	<div class="content">
		<div class="extra extra-top">
			<div class="category">{link-category} / {tags}</div>
			<span class="date">{date}</span>
		</div>
		{full-story}
		<div class="extra extra-bottom">
			{rating}
			[not-group=5]
			<div class="controls">
				[edit]Editer[/edit]
				[complaint]Signaler une erreur[/complaint]
				{favorites}
			</div>
			[/not-group]
		</div>
	</div>
	
	<div class="comment-wrapper">
		<h3>Avis pour le film</h3>
		{addcomments}
		{comments}
		{navigation}
	</div>	
</div>
