<div class="story story-short">
	<div class="title">
		<h2><a href="{full-link}">{title}</a></h2>
	</div>
	<div class="content">
		<div class="extra extra-top">
			<div class="category">{category} / {tags}</div>
			<span class="date">{date}</span>
		</div>
		{short-story}
		<div class="extra extra-bottom">
			{rating}
			
			<div class="controls">
				<span>({views}[comments]/{comments-num}[/comments])</span>
				<a href="{full-link}">Plus</a>
			</div>
			
		</div>
	</div>	
</div>