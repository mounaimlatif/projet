<div class="comment">
	<div class="comment-ads">
		<b>[profile]{author}[/profile]</b> 
		<div class="date"><span>{date}</span> #{comment-id}{mass-action}</div>
	</div>
	<div class="comment-inner">
		<div class="avatar">[profile]<img src="{foto}" alt="{login}" title="utilisateur: {login}" />[/profile]</div>
		<div class="comment-data">
			[aviable=lastcomments]<p><b>{news_title}</b></p>[/aviable]
			{comment}
			[signature]<div class="signature">{signature}</div>[/signature]
		</div>
	</div>
	[not-group=5]
	<div class="serv-links">
		[com-del]Enlever[/com-del]
		[com-edit]Editer[/com-edit]
		[fast]Citer[/fast]
		[complaint]Reclamer[/complaint]
	</div>
	[/not-group]
</div>
